<h1>New Configuration</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4 col-xs-4 col-xs-offset-4">
		<%= form_for @config do |f| %>
			<% render 'shared/error_messages', object: f.object %>
			<div class="form-group">
				<%= f.label "budgeted_contribution ($)" %>
				<%= f.text_field :budgeted_contrib, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label "Over spend contribution (%)" %>
				<%= f.text_field :over_spend, class: "form-control" %>
			</div>
			<div class="submit">
				<%= f.submit "save", class: "btn btn-lg btn-primary" %>
			</div>
		<% end %>
	</div>
</div>
<h1>New Employee Invite</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4 col-xs-4 col-xs-offset-4">
		<%= form_for @shared_user do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="form-group">
				<%= f.label :shared_email %>
				<%= f.email_field :shared_email %>
			</div>
			<div class="form-group">
				<%= f.label :message %>
				<%= f.text_area :message %>
			</div>
			<div class="submit">
				<%= f.submit "save", class: "btn btn-primary btn-lg" %>
			</div>
		<% end %>
	</div>
</div>
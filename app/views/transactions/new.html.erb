<h1>New Transaction</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4 col-xs-4 col-xs-offset-4">
		<%= form_for @transaction do |f| %>
			<div class="form-group">
				<%= f.label :purchase_date %>
				<%= f.date_field :purchase_date %>
			</div>
			<div class="form-group">
				<%= f.label :category %>
				<%= f.text_field :category %>
			</div>
			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_field :description %>
			</div>
			<div class="form-group">
				<%= f.label :amount %>
				<%= f.text_field :amount %>
			</div>
			
			<div class="submit">
				<%= f.submit "save", class: "btn btn-primary btn-lg" %>
			</div>
		<% end %>
	</div>
</div>